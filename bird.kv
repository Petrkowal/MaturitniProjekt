# Třída Bird: Vykresluje ptáka
<Bird>
    size_hint: None, None
    # Rozměry na pevno (které se rovnají rozměrům textur)
    size: 68, 48
    # Středy v osách x, y
    center_y: 200
    center_x: 500

# Rotace (jenom obrázek)

    canvas.before:
        PushMatrix
        Rotate:
            angle: self.angle
            origin: self.center
    canvas.after:
        PopMatrix
